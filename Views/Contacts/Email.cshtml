@model ContactHarbor.Models.EmailContactViewModel

<h2>Email Contact : @Model.Contact!.FullName</h2>

<form asp-action="Email" method="post">
    <input type="hidden" asp-for="Contact!.Id" />
    <input type="hidden" asp-for="Contact!.Email" />
    <div class="form-group col-12">
        <label for="RecipientEmail">To </label>
        <input id="RecipientEmail" class="form-control" value="@Model.Contact!.Email" disabled />
    </div>

    <div class="form-group col-12">
        <label asp-for="Subject"></label>
        <input asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>

    <div class="form-group col-12">
        <label asp-for="Message"></label>
        <textarea asp-for="Message" class="form-control" style="height: 200px;"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>

    <div class="row my-2">
        <div class="col-6">
            <a asp-action="Index" class="btn btn-danger">Back to List</a>
        </div>
        <div class="col-6 d-flex justify-content-end">
            <button type="submit" class="btn btn-app-primary">Send Email</button>
        </div>
    </div>
</form>