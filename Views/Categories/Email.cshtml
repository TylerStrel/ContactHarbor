@model ContactHarbor.Models.EmailCategoryViewModel

<h2>Email Category : @Model.Category!.Name</h2>

<form asp-action="Email" method="post">
    <input type="hidden" asp-for="Category!.Id" />
    <input type="hidden" asp-for="Category!.Contacts" />
    <div class="form-group col-12">
        <label for="RecipientEmail">To</label>
        <textarea id="RecipientEmail" class="form-control" disabled>@String.Join(" ", Model.Category.Contacts.Select(c => c.Email))</textarea>
    </div>

    <div class="form-group col-12">
        <label asp-for="Subject"></label>
        <input asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>

    <div class="form-group col-12">
        <label asp-for="Message"></label>
        <textarea asp-for="Message" class="form-control" style="height: 200px;"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>

    <div class="row my-2">
        <div class="col-6">
            <a asp-action="Index" class="btn btn-danger">Back to List</a>
        </div>
        <div class="col-6 d-flex justify-content-end">
            <button type="submit" class="btn btn-app-primary">Send Email</button>
        </div>
    </div>
</form>