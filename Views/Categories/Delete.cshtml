@model ContactHarbor.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row">
        <h1 class="text-center w-100">Delete Contact</h1>
    </div>
    <div class="row">
        <h3 class="text-center w-100">Are you sure you want to delete this?</h3>
    </div>
    <div class="card mb-3 shadow">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">There are @Model.Contacts.Count() contacts in this category.</p>
            <div class="d-flex flex-row">
                @foreach (var contact in Model.Contacts)
                {
                    <div class="flex-column m-1">
                        @if (contact.ImageData is not null)
                        {
                            <img class="img-fluid img-thumbnail" style="height:54px; width:auto;" title="@contact.FullName" src="data:image/*;base64,@(Convert.ToBase64String(contact.ImageData))">
                        }
                        else
                        {
                            <img class="img-fluid img-thumbnail" style="height:54px; width:auto;" src="/img/DefaultContactImage.png">
                        }
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <form asp-action="Delete" class="d-flex justify-content-between w-100">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-app-primary">Back to List</a>
            <input type="submit" value="Delete" class="btn btn-danger ml-auto" />
        </form>
    </div>
</div>
